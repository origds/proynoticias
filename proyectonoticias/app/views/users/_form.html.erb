<%= semantic_form_for @user do |f| %>

<div class="span2"></div></div>
<div class="span8">
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= f.label "Correo electrÃ³nico"%>
          <%= f.input :email, :label => false %>
        </td>
        <td>
          <%= f.label "Rol" %>
          <%= f.input :role, :as => :select, 
          :collection => [['Administrador', 'admin'], 
          ['Usuario Privilegiado','privileged'], 
