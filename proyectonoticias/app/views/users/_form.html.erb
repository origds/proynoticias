<%= semantic_form_for @user do |f| %>

<div class="span2"></div></div>
<div class="span8">
  <table class="table" style="width:80%;margin:auto;text-align: center;">
    <tbody>
      <tr>
        <% if current_user.role == "admin" %>
        <td>
          <%= f.label "Correo electrónico"%>
          <%= f.input :email, :label => false %>
        </td>
        <td>
          <%= f.label "Rol" %>
          <%= f.input :role, :as => :select, 
          :collection => [['Administrador', 'admin'], 
          ['Usuario Privilegiado','privileged'], 
          ['Usuario Normal', 'normal']], :label => false, :include_blank => false  %>
        </td>
        <% else %>
          <td colspan=2>
            <%= f.label "Correo electrónico"%>
            <%= f.input :email, :label => false %>
          </td>
        <% end %>
      </tr>
      <tr>
         <td>
          <%= f.label "Nombre"%>
          <%= f.input :name, :label => false %>
        </td>
         <td>
          <%= f.label "Apellido"%>
          <%= f.input :lastname, :label => false %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.action :submit, :button_html => {:class => "btn btn-default"},:label => "Editar" %>
        </td>
        <td>
          <%=link_to 'Volver', :back, :class => "btn btn-default"%>
        </td>
      </tr>
    </tbody>
  </table>

  <div id="boton" class = "btn-group">
  </div>

</div>
<div class="span2"></div>

<% end %>