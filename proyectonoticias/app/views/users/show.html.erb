<div class="span2"></div>
<div class="span8" style="overflow: auto;">
  <div class="page-header">
    <h2>Usuario</h2>
  </div>
  <div class="media">
    <div class="media-body">
      <table style="width:100%">
        <tr>
          <td>
            <b>Login</b>
            <%= @user.login %>
          </td>
        </tr>
        <tr>
          <td>
            <b>Email</b>
            <%= @user.email %>
          </td>
        </tr>
        <tr>
          <td>
            <strong>Rol</strong>
            <% if @user.role == "admin"%>
            Administrador.
            <% elsif @user.role == "privileged" %>
            Usuario Privilegiado.
            <% elsif @user.role == "normal" %>
            Usuario Normal.
            <% else %>
            --
            <% end %>
          </td>
        </tr>
        <tr>
          <td>
            <strong>Nombre</strong>
            <%= @user.name %> <%= @user.lastname %>
          </td>
        </tr>
      </table>
      <div class="btn-group">
        <%= link_to 'Editar', edit_user_path(@user), :class => "btn btn-default" %>
        <%= link_to 'Volver', users_path, :class => "btn btn-default" %>
      </div>

    </div>
    <% if current_user.role == "admin" %>
    <div class="page-header">
      <h2>Noticias del usuario</h2>
    </div>
    <% end %>
    <% if @reports.count == 0  %>
    <p>Este usuario no ha creado ninguna noticia.</p>
    <% else %>
    <table style="width:800px">
      <thead>
        <tr>
         <th style="width:500px">TÃ­tulo</th>
         <th>Ver</th>
         <% if current_user.role == "admin" %>
         <th>Editar</th>
         <th>Eliminar</th>
         <% end %>
       </tr>
     </thead>

     <tbody>
       <% @reports.each do |report| %>
       <tr>
        <td><%= report.title %></td>
        <td><%= link_to glyph(:eye_open), report %></td>
        <% if current_user.role == "admin" %>
        <td><%= link_to glyph(:pencil), edit_report_path(report) %></td>
        <td><%= link_to glyph(:remove), report, method: :delete, data: { confirm: 'Esta seguro de eliminarla?'} %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>

</div>
</div>
<div class="span2"></div>
