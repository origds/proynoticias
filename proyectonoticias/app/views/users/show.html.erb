<div class="span2"></div>
<div class="span8">
  <div class="page-header">
    <h2>Usuario</h2>
    <div class="btn-group" style="margin-top:-40px; float:right;">
      <%= link_to 'Editar', edit_user_path(@user), :class => "btn btn-default" %>
      <%= link_to 'Volver', users_path, :class => "btn btn-default" %>
    </div>
  </div>
  <div class="media">
    <div class="media-body">
      <table style="width:600px">
        <tr>
          <td>
            <p>
              <strong>Email:</strong>
              <%= @user.email %>
            </p>            
          </td>
          <td>
            <p>
              <strong>Rol:</strong>
              <% if @user.role == "admin"%>
              Administrador.
              <% elsif @user.role == "privileged" %>
              Usuario Privilegiado.
              <% elsif @user.role == "normal" %>
              Usuario Normal.
              <% else %>
              --
              <% end %>
            </p>
          </td>
        </tr>

      </table>
      <!--<p id="notice"><%= notice %></p>-->

    </div>
  </div>
  <% if current_user.role == "admin" %>
  <div class="page-header">
    <h2>Noticias del usuario</h2>
  </div>
  <% end %>
  <% if @reports.count == 0  %>
  Este usuario no ha creado ninguna noticia.
  <% else %>
  <table style="width:800px">
    <thead>
      <tr>
       <th style="width:500px">TÃ­tulo</th>
       <th>Ver</th>
       <% if current_user.role == "admin" %>
       <th>Editar</th>
       <th>Eliminar</th>
       <% end %>
     </tr>
   </thead>

   <tbody>
     <% @reports.each do |report| %>
     <tr>
      <td><%= report.title %></td>
      <td><%= link_to glyph(:eye_open), report %></td>
      <% if current_user.role == "admin" %>
      <td><%= link_to glyph(:pencil), edit_report_path(report) %></td>
      <td><%= link_to glyph(:remove), report, method: :delete, data: { confirm: 'Esta seguro de eliminarla?'} %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>

</div>
</div>
<div class="span2"></div>
