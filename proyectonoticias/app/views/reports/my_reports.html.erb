<h1>Mis Noticias</h1>

<table>
  <thead>
    <tr>
      <th style="width:700px">Titulo</th>
      <th>Visto</th>
      <th>Aprobado</th>
      <th>Ver</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
    <tr>
      <td><%= report.title %></td>
      <td>

        <% if report.viewed == false %>
          <span style="color:red">No</span>
          <% else %>
          <span style="color:green">Si</span>
        <% end %>
      
      </td>
      <td>
        <% if report.approved == false %>
        <span style="color:red">No</span>
          <% else %>
          <span style="color:green">Si</span>
        <% end %>
      </td>
      <td><%= link_to '◉', report %></td>
      <% if report.approved == false || current_user.role == 'admin' %>
      <td>
        <%= link_to '✎', edit_report_path(report) %>
      </td>
      <td>
        <%= link_to 'X', report, method: :delete, data: { confirm: '¿Seguro desea eliminar la noticia?'} %>
      </td>
      <% else %>
        <td colspan='2'>Aprobada</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<br>