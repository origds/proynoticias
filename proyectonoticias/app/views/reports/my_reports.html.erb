<h1>Mis Noticias</h1>

<table>
  <thead>
    <tr>
      <th style="width:700px">Titulo</th>
      <th>Visto</th>
      <th>Aprobado</th>
      <th>Ver</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
    <tr>
      <td><%= report.title %></td>
      <td>
        <% if report.viewed == true %>
        Si
        <% else %>
        No
        <% end %>
        
      </td>
      <td>
        <% if report.approved == true %>
        Si
        <% else %>
        No
        <% end %>
      </td>
      <td><%= link_to '◉', report %></td>
      <td>
      <% if report.approved == false %>
        <%= link_to '✎', edit_report_path(report) %>
      <% end %>
      </td>
      <td>
        <% if report.approved == false %>
        <%= link_to 'X', report, method: :delete, data: { confirm: 'Esta seguro de eliminarla?'} %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>