<h1>Noticias Por Aprobar</h1>

<table>
  <thead>
    <tr>
      <th style="width:700px">Titulo</th>
      <th>Usuario</th>
      <th>Ver</th>
      <% if current_user.role == "Admin" %>
      <th>Editar</th>
      <th>Eliminar</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= User.find(report.user_id).email %></td>
        <td><%= link_to '◉', report %></td>
        <% if current_user.role == "Admin" %>
        <td><%= link_to '✎', edit_report_path(report) %></td>
        <td><%= link_to 'X', report, method: :delete, data: { confirm: 'Esta seguro de eliminarla?'} %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>