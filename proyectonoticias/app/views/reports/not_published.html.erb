<div class="span8">
<div class="panel panel-default" style="width:80%;margin:auto">
  <div class="panel-heading"><h3>Noticias Por Publicar</h3></div>
  <% if @reports.count != 0 %>
  <!-- Table -->
  <table class="table table-bordered"  style="text-align: center;">
    <thead>
      <tr>
        <th style="width:80%;">TÃ­tulo</th>        
        <th>Autor</th>
        <th>Ver</th>
        <th>Eliminar</th>
      </tr>
    </thead>

    <tbody>
      <% @reports.each do |report| %>
      <tr>
        <td style="height:50px">
          <%= report.title %>
        </td>
        <% if User.find(report.user_id).name == "" && User.find(report.user_id).lastname == "" %>
        <td style="height:50px">
          <%= User.find(report.user_id).login %> 
        </td>
        <% else %>
        <td style="height:50px">
          <%= User.find(report.user_id).name %> <%= User.find(report.user_id).lastname %>
          </td>
        <% end %>
          <td style="height:50px">
            <%= link_to report do %>
            <i class="glyphicon glyphicon-eye-open"></i>
            <% end %>
          </td>
          <% if current_user.role == "admin" %>
        <td style="height:50px">
          
            <%= link_to report, method: :delete, data: { confirm: 'Esta seguro de eliminarla?'} do %>
            <i class="glyphicon glyphicon-remove"></i>
            <% end %>
          </td>
          <% end %>
        </tr>
      </tbody>
      <% end %>
  </table>
</div>
  <% else %>
  <div class="panel-body">
    <p>No hay noticias por publicar.</p>
  </div>
  <% end %>


