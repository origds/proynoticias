<div class ="titulos" >
  <h1>Noticias</h1>
</div>

<div class="span12" style="margin-top:20px;">

<% if @reports.count == 0 %>
  <p style="center">No hay noticias en el sistema.</p>
<% else %>

  <table style="width:800px">
    <thead>
      <tr>
       <th style="width:500px">TÃ­tulo</th>
      <th>Usuario</th>
      <th>Ver</th>
      <% if current_user.role == "admin" %>
      <th>Editar</th>
      <th>Eliminar</th>
      <% end %>
      </tr>
    </thead>

    <tbody>
     <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= User.find(report.user_id).name %> <%= User.find(report.user_id).lastname %></td>
        <td><%= link_to glyph(:eye_open), report %></td>
        <% if current_user.role == "admin" %>
        <td><%= link_to glyph(:pencil), edit_report_path(report) %></td>
        <td><%= link_to glyph(:remove), report, method: :delete, data: { confirm: 'Esta seguro de eliminarla?'} %></td>
        <% end %>
      </tr>
     <% end %>
    </tbody>
  </table>
<% end %>
</div>