<h1>Listing reports</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Source</th>
      <th>User</th>
      <th>Author</th>
      <th>Viewed</th>
      <th>Approved</th>
      <th>Sent</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.content %></td>
        <td><%= report.source %></td>
        <td><%= report.user_id %></td>
        <td><%= report.author %></td>
        <td><%= report.viewed %></td>
        <td><%= report.approved %></td>
        <td><%= report.sent %></td>
        <td><%= report.published %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report', new_report_path %>
