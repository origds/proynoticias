<div class ="titulos" >
  <h1>Noticias Por Enviar</h1>
</div>

<div class="span12" style="margin-top:20px;">

  <% if @reports.count == 0 %>
    <p>No hay noticias por enviar.</p>
  <% else %>

  <table style="width:800px">
    <thead>
      <tr>
        <th style="width:500px">TÃ­tulo</th>
        <th>Autor</th>
        <th>Ver</th>
        <th>Eliminar</th>
      </tr>
    </thead>

    <tbody>
      <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <% if User.find(report.user_id).name == "" && User.find(report.user_id).lastname == "" %>
        <td><%= User.find(report.user_id).login %> </td>
        <% else %>
        <td><%= User.find(report.user_id).name %> <%= User.find(report.user_id).lastname %></td>
        <% end %>
        <td><%= link_to glyph(:eye_open), report %></td>
        <td><%= link_to glyph(:remove), report, method: :delete, data: { confirm: 'Esta seguro de eliminarla?'} %></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>