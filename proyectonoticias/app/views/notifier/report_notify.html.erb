<h1>Boletin Informativo</h1>

<p>Tienes nuevas noticias para leer</p>

<table style="width:600px;margin:auto">
  <thead>
    <tr>
      <th>Titulos</th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
      </tr>
    <% end %>
    <% @reports.each do |report| %>
      <tr>
        <td><b><%= report.title %></b></td>
      </tr>
      <tr>
        <td><%= report.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>
